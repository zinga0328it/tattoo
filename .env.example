# Configurazione Ambiente - Roma Studio Tattoo Gallery
# Copia questo file in .env e modifica con i tuoi valori

# Token del Bot Telegram (ottenuto da @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID degli amministratori Telegram (separati da virgola)
# Questi utenti possono approvare le foto caricate
ADMIN_TELEGRAM_IDS=admin_id_1,admin_id_2,admin_id_3

# Impostazioni Django (per ambiente produzione)
DJANGO_SETTINGS_MODULE=tattoo_gallery.settings

# Database (SQLite per semplicità, può essere cambiato)
DATABASE_URL=sqlite:///tattoo_gallery.db

# Directory delle immagini
IMAGE_DIR=/var/www/romastudiotattoo/images

# URL del sito web (per generazione link)
SITE_URL=https://www.romastudiotattoo.it

# Impostazioni sicurezza (opzionali)
SECRET_KEY=your_django_secret_key_here
DEBUG=False
ALLOWED_HOSTS=www.romastudiotattoo.it,romastudiotattoo.it,localhost,127.0.0.1